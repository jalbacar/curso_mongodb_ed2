{
  "name": "MongoDB Admin Lab",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu", 
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "mongodb.mongodb-vscode", // Extensi√≥n oficial de Mongo
        "ms-azuretools.vscode-docker" // Para gestionar los nodos visualmente
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/setup-cluster.sh",
  "forwardPorts": [27017, 27018, 27019]
}