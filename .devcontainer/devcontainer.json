{
  "name": "mongo-admin-labs",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "postStartCommand": "test -f .env || cp .env.example .env; docker compose up -d && docker compose ps",
  "forwardPorts": [27017, 27018, 27019],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
